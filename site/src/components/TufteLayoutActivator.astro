<script is:inline>
  // Activate the Tufte Layout for this page
  if (typeof document !== "undefined") {
    document.body.classList.add("tufte-layout");

    // Cleanup on navigation (if View Transitions are active)
    document.addEventListener(
      "astro:before-swap",
      () => {
        document.body.classList.remove("tufte-layout");
      },
      { once: true },
    );
  }
</script>
