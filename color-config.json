{
  "$schema": "./color-config.schema.json",
  "anchors": {
    "keyColors": {
      "brand": "#8b5cf6",
      "success": "#10b981",
      "warning": "#f59e0b",
      "danger": "#ef4444",
      "highlight": "#d946ef",
      "blue": "#3b82f6",
      "info": "#6366f1"
    }
  },
  "groups": [
    {
      "name": "Page",
      "surfaces": [
        {
          "slug": "page",
          "label": "Page Background",
          "polarity": "page",
          "hue": "brand",
          "targetChroma": 0
        },
        {
          "slug": "workspace",
          "label": "Workspace",
          "polarity": "page",
          "hue": "brand",
          "targetChroma": 0,
          "contrastOffset": {
            "light": 0.02,
            "dark": 0.02
          }
        }
      ]
    },
    {
      "name": "Content",
      "surfaces": [
        {
          "slug": "card",
          "label": "Card",
          "polarity": "page",
          "hue": "brand",
          "targetChroma": 0,
          "states": [
            { "name": "hover", "offset": 0.05 },
            { "name": "active", "offset": 0.08 }
          ]
        }
      ]
    },
    {
      "name": "Actions",
      "surfaces": [
        {
          "slug": "action",
          "label": "Primary Action",
          "polarity": "inverted",
          "hue": "brand",
          "states": [
            { "name": "hover", "offset": 0.1 },
            { "name": "active", "offset": 0.15 }
          ]
        },
        {
          "slug": "action-soft",
          "label": "Secondary Action",
          "polarity": "page",
          "hue": "brand",
          "states": [
            { "name": "hover", "offset": 0.05 },
            { "name": "active", "offset": 0.08 }
          ]
        }
      ]
    },
    {
      "name": "Feedback",
      "surfaces": [
        {
          "slug": "spotlight",
          "label": "Spotlight",
          "polarity": "inverted",
          "hue": "brand",
          "override": {
            "light": "#8b5cf6",
            "dark": "#8b5cf6"
          }
        },
        {
          "slug": "status-success",
          "label": "Success",
          "polarity": "page",
          "hue": "success",
          "targetChroma": 0.15
        },
        {
          "slug": "status-warning",
          "label": "Warning",
          "polarity": "page",
          "hue": "warning",
          "targetChroma": 0.15
        },
        {
          "slug": "status-error",
          "label": "Error",
          "polarity": "page",
          "hue": "danger",
          "targetChroma": 0.2
        }
      ]
    }
  ]
}
